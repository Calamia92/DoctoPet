{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "lib": ["ESNext", "DOM"],
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }
  